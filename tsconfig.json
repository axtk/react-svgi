{
    "include": ["@types/*", "index.ts"],
    "compilerOptions": {
        "typeRoots": ["@types", "node_modules/@types"],
        "lib": ["esnext", "dom"],
        "target": "esnext",
        "outDir": "dist",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}
